{% extends 'base.html.twig' %}

{% block title %}Ajouter un événement{% endblock %}

{% block body %}
<h2> Ajouter un événement </h2>
<br>
<div style="text-align: center">
    {{ form_start(form) }}
    <div class="form-row">
            <div class="form-label">{{ form_label(form.nom) }}</div>
            <div class="form-field">{{ form_widget(form.nom) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.description) }}</div>
            <div class="form-field">{{ form_widget(form.description) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.date) }}</div>
            <div class="form-field">{{ form_widget(form.date) }}</div>
        </div>
    <button type="submit" class="submit-button">Ajouter événement</button>
    {{ form_end(form) }}
</div>
{% endblock %}

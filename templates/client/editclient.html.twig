{% extends 'base.html.twig' %}

{% block title %}Modifier info client{% endblock %}

{% block body %}
<h2> Modifier les informations du client </h2>
<div style="text-align: center">
    {{ form_start(form) }}
    <div class="form-row">
            <div class="form-label">{{ form_label(form.nom) }}</div>
            <div class="form-field">{{ form_widget(form.nom) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.email) }}</div>
            <div class="form-field">{{ form_widget(form.email) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.telephone) }}</div>
            <div class="form-field">{{ form_widget(form.telephone) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.adresse) }}</div>
            <div class="form-field">{{ form_widget(form.adresse) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.codePostal) }}</div>
            <div class="form-field">{{ form_widget(form.codePostal) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.ville) }}</div>
            <div class="form-field">{{ form_widget(form.ville) }}</div>
        </div>
    <button type="submit" class="submit-button">Enregister</button>
    {{ form_end(form) }}
    <td><a href="{{ path('app_client_remove', {'name': client.nom}) }}" class="sm-button">/!\ Supprimer le client /!\</a></td>
</div>
{% endblock %}
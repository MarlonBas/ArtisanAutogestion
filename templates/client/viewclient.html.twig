{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}
<h2> {{client.nom}} </h2>
<p style="text-align: center"><br>
{{client.Email}}
<br>
{{client.Telephone}}
<br>
{{client.Adresse}}, {{client.codePostal}}, {{client.ville}}
<br>
{% if (client.siret) %}
SIRET: {{ client.siret }}
{% endif %}</p>
<a href="{{ path('app_client_edit', {'name': client.nom}) }}" class="sm-button">Modifier</a>
<div class="column" style="text-align: center">
    <strong>Documents associ√©s</strong>
    {% for document in documents %}
        <a href="{{ path('app_document_show', {'id': document.id})}}" class="card">{{document.numero}} - {{document.numero|slice(3, 2)}}/{{document.numero|slice(1, 2)}}</a>
        <br>
    {% endfor %}
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Creation de document{% endblock %}

{% block body %}
<h2> Cr√©er un nouveau document </h2>
<br>
<div style="text-align: center">
    {{ form_start(form) }}
    <div class="form-row">
            <div class="form-label">{{ form_label(form.date) }}</div>
            <div class="form-field">{{ form_widget(form.date) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.type) }}</div>
            <div class="form-field">{{ form_widget(form.type) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.client) }}</div>
            <div class="form-field">{{ form_widget(form.client) }}</div>
        </div>
        {% if (user.parametres.modeMicro != true) %}
        <div class="form-row">
            <div class="form-label">{{ form_label(form.tva) }}</div>
            <div class="form-field">{{ form_widget(form.tva) }}</div>
        </div>
        {% endif %}
        {% if (user.parametres.modeMicro == true) %}
        <div class="form-row">
            <div class="form-label" style="display: none;">{{ form_label(form.tva) }}</div>
            <div class="form-field" style="display: none;">{{ form_widget(form.tva) }}</div>
        </div>
        {% endif %}
        <div class="form-row">
            <div class="form-label">{{ form_label(form.notes) }}</div>
            <div class="form-field">{{ form_widget(form.notes) }}</div>
        </div>
    <button type="submit" class="submit-button">Suivant</button>
    {{ form_end(form) }}
</div>
{% endblock %}

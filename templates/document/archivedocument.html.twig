{% extends 'base.html.twig' %}

{% block title %}Documents archivés{% endblock %}

{% block body %}
    <h2>Documents archivés</h2>
    {{ form_start(form) }}
        <div class="form-row">
            <div class="form-label">{{ form_label(form.searchString) }}</div>
            <div class="form-field">{{ form_widget(form.searchString) }}</div>
        </div>
        <div class="form-row">
            <div class="form-label">{{ form_label(form.dateStart) }}</div>
            <div class="form-field">{{ form_widget(form.dateStart) }}</div>
        </div>
         <div class="form-row">
            <div class="form-label">{{ form_label(form.dateEnd) }}</div>
            <div class="form-field">{{ form_widget(form.dateEnd) }}</div>
        </div>
        <button type="submit" class="submit-button">Rechercher</button>
    {{ form_end(form) }}
    <p>Devis</p>
    <br>
    {% for document in devis %}
        <a href="{{ path('app_document_show', {'id': document.id}) }}">{{document.date|date('d/m/y')}}---{{document.numero}}---{{document.client.nom}}</a>
        <br>
    {% endfor %}
    <p>Factures</p>
    <br>
    {% for document in factures %}
        <a href="{{ path('app_document_show', {'id': document.id}) }}">{{document.date|date('d/m/y')}}---{{document.numero}}---{{document.client.nom}}</a>
        <br>
    {% endfor %}
{% endblock %}